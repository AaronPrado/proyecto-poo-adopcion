# Google OAuth
# Configura en https://console.cloud.google.com/
# URI de redirección: http://localhost:5000/auth/google/callback
GOOGLE_CLIENT_ID=tu_client_id
GOOGLE_CLIENT_SECRET=tu_client_secret

# AWS S3 (subida de imágenes)
# Crear bucket con acceso público de lectura
# Crear usuario IAM con permisos: PutObject, GetObject, DeleteObject
AWS_ACCESS_KEY_ID=tu_access_key
AWS_SECRET_ACCESS_KEY=tu_secret_key
AWS_S3_BUCKET=nombre_bucket
AWS_S3_REGION=eu-west-1

# JWT (API REST)
# Clave secreta para firmar tokens (genera con: python -c "import secrets; print(secrets.token_hex(32))")
JWT_SECRET_KEY=tu_clave_secreta
